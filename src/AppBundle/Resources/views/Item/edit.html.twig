{% extends '::base.html.twig' %}

{% block body %}
    {% include 'AppBundle::menu.html.twig' %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h3><span class="label label-success">{{ bucket.name }}</span></h3>

        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        <div class="form-group">
            {{ form_label(edit_form.title) }}
            {{ form_errors(edit_form.title) }}
            {{ form_widget(edit_form.title) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.content) }}
            {{ form_errors(edit_form.content) }}
            {{ form_widget(edit_form.content, {'attr': {'data-provide': 'markdown'}}) }}
        </div>

        <div class="form-group">
            {{ form_widget(edit_form.submit) }}
        </div>

        {{ form_end(edit_form) }}

        <hr>

        <div class="form-group">
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
